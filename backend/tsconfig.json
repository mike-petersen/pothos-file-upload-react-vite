	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": "./src"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules"
	]
}
